<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beige"
    android:orientation="vertical"
    tools:context=".activities.ReportForLocationActivity">

    <ScrollView
        android:id="@+id/scrollViewGallery"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_weight="1"
        android:contentDescription="@string/app_name"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/galleryLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"/>
    </ScrollView>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/buttonAddImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:backgroundTint="@color/green_200"
            android:fontFamily="@font/signika_negative"
            android:text="Add Image"
            android:textColor="@color/green_800"
            android:visibility="visible"
            tools:visibility="visible" />

        <Button
            android:id="@+id/buttonTakePicture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:backgroundTint="@color/green_200"
            android:fontFamily="@font/signika_negative"
            android:text="Take picture"
            android:textColor="@color/green_800"
            android:visibility="visible"
            tools:visibility="visible" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewAudioRecordingList"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginVertical="10dp" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonStartPauzeRecording"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_weight="1"
            android:backgroundTint="@color/green_200"
            android:fontFamily="@font/signika_negative"
            android:text="Start recording"
            android:textColor="@color/green_800"
            android:visibility="visible"
            tools:visibility="visible" />

        <Button
            android:id="@+id/buttonStopRecording"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_weight="1"
            android:backgroundTint="@color/green_200"
            android:fontFamily="@font/signika_negative"
            android:text="Stop recording"
            android:textColor="@color/green_800"
            android:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginVertical="10dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editTextNote"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:backgroundTint="@color/green_200"
            android:fontFamily="@font/signika_negative"
            android:hint="Note"
            android:textSize="15sp"
            tools:visibility="visible" />

    </LinearLayout>

    <Button
        android:id="@+id/buttonSendReport"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="10dp"
        android:layout_weight="1"
        android:backgroundTint="@color/green_200"
        android:fontFamily="@font/signika_negative"
        android:text="Send report"
        android:textColor="@color/green_800"
        android:visibility="visible"
        tools:visibility="visible" />

</LinearLayout>